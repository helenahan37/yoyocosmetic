@model List<Category>
<div class="container">
    <div class="row mb-4">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <h2>Category List</h2>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 d-flex justify-content-lg-end justify-content-md-start justify-content-sm-end justify-content-xs-start">
            <a asp-controller="Category" asp-action="Create" class="btn btn-border-primary"> Create New Category <i class="bi bi-plus-circle"></i></a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>